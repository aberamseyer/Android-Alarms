<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/basicborder"
        android:scaleX="1.25"
        android:scaleY="1.25"
        android:id="@+id/gridLayout2"
        app:layout_constraintTop_toBottomOf="@+id/space"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25">


        <Button android:text="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button1" />

        <Button android:text="2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button2" />

        <Button android:text="3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button3" />

        <Button android:text="4"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button4" />

        <Button android:text="5"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button5" />

        <Button android:text="6"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button6" />

        <Button android:text="7"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button7" />

        <Button android:text="8"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button8" />

        <Button android:text="9"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button9" />

        <Button
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button0"
            android:text="0" />

        <Button android:text="CLR"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/buttonDelete" />

    </GridLayout>

    <Button
        android:text="Edit Timer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/editLocationButton"
        app:layout_constraintRight_toRightOf="@+id/gridLayout2"
        app:layout_constraintLeft_toLeftOf="@+id/gridLayout2"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="92dp"
        android:background="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/space"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/space"
        app:layout_constraintBottom_toBottomOf="@+id/space"
        app:layout_constraintLeft_toLeftOf="@+id/space"
        app:layout_constraintRight_toRightOf="@+id/space"
        android:gravity="center_vertical">

        <TextView
            android:text="00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minutesText"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="227dp"
            tools:layout_editor_absoluteY="101dp"
            android:gravity="right" />

        <TextView
            android:text="minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textColor="@android:color/background_light"
            android:gravity="left"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintVertical_bias="0.96"
            tools:layout_editor_absoluteY="116dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/daysText"
            android:layout_weight="1"
            android:foregroundGravity="left" />
    </LinearLayout>

    <TextView
        android:text="Edit Location Alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

</android.support.constraint.ConstraintLayout>