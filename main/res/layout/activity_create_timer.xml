<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="ilstu.edu.project2alarms.CreateTimerActivity">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/basicborder"
        app:layout_constraintTop_toBottomOf="@+id/timerTime"
        android:scaleX="1.25"
        android:scaleY="1.25"
        android:id="@+id/gridLayout2"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="40dp">


        <Button android:text="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button1" />

        <Button android:text="2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button2" />

        <Button android:text="3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button3" />

        <Button android:text="4"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button4" />

        <Button android:text="5"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button5" />

        <Button android:text="6"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button6" />

        <Button android:text="7"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button7" />

        <Button android:text="8"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button8" />

        <Button android:text="9"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button9" />

        <Button
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="30sp"
            android:id="@+id/button0"
            android:text="0" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="12sp"
            android:id="@+id/buttonDelete"
            android:background="?android:attr/homeAsUpIndicator"
            android:layout_columnSpan="1"
            android:text="     " />

    </GridLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/timerTime"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:gravity="right|center_vertical"
        app:layout_constraintRight_toRightOf="@+id/gridLayout2"
        app:layout_constraintLeft_toLeftOf="@+id/gridLayout2"
        android:foregroundGravity="right"
        android:letterSpacing=".3"
        android:background="@drawable/bottomborder"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:text="Set!"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/setTimerButton"
        app:layout_constraintRight_toRightOf="@+id/gridLayout2"
        app:layout_constraintLeft_toLeftOf="@+id/gridLayout2"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2" />

    <TextView
        android:text="sec."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        app:layout_constraintLeft_toRightOf="@+id/timerTime"
        app:layout_constraintBottom_toBottomOf="@+id/timerTime"
        android:gravity="left"
        app:layout_constraintHorizontal_bias="0.05"
        android:layout_marginStart="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintVertical_bias="0.96" />

    <TextView
        android:text="Create Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
